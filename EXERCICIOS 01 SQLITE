-- EXERCÍCIOS 01

-- 1. SELECIONE CONTE TODAS AS LINHAS DA TABELA ORDERS E DÊ UM APELIDO PARA A COLUNA RETORNADA

SELECT COUNT(*) AS CONTAGEM_DE_REGISTROS FROM ORDERS;


-- 2. SELECIONE TODAS AS LINHAS DA TABELA ORDERS COM O STATUS DIFERENTE DE 'delivered' OU QUE NÃO TENHAM PEDIDOS APROVADOS

SELECT * FROM ORDERS
WHERE ORDER_STATUS != 'delivered'
OR ORDER_APPROVED_AT IS NULL



-- 3. SELECIONE APENAS AS LINHAS ÚNICAS DA TABELA ORDERS E APENAS AS COLUNAS CUSTOMER_ID, ORDER_ID E ORDER_ID E ORDER_APPROVED_AT E DÊ APELIDOS AS COLUNAS RETORNADAS

SELECT DISTINCT ORDER_ID AS 'ID_PEDIDO'
      ,ORDER_APPROVED_AT AS 'APROVACAO_DO_PEDIDO'
      ,CUSTOMER_ID AS 'ID_DO_CLIENTE'
FROM ORDERS;



-- 4. SELECIONE TODOS OS CLIENTES CUJA CIDADE NÃO INICIA COM O NOME 'franca'

SELECT * FROM CUSTOMERS
WHERE CUSTOMER_CITY NOT LIKE 'FRANCA%'



-- 5. SELECIONE AS LINHAS ÚNICASA DA TABELA ORDERS E APRESENTE APENAS OS DADOS DA COLUNA ORDER_STATUS

